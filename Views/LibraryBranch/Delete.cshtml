@model LibraryManagement.Models.LibraryBranch

<h2>Delete Confirmation</h2>
<br>
<h3>Are you sure you want to delete this Branch?</h3>
<br>
    <div>
        BranchId:       @Model.BranchId <br>
        BranchName:     @Model.BranchName <br>
        Street:         @Model.Street <br>
        State:          @Model.State <br>
        Postcode:       @Model.Postcode <br>
        Telephone:      @Model.Telephone <br>
    </div>
    <br>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="BranchId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
