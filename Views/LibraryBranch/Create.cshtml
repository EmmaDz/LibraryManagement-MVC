@model LibraryManagement.ViewModels.LibraryBranchViewModel

<h2>Create Library Branch</h2>

<form method="post">
    <div class="mt-3">
        <label class="form-lable">BranchId</label>
        <input type="number" class="form-control" asp-for="BranchId"/>
        <span asp-validation-for="BranchId" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-lable">BranchName</label>
        <input type="text" class="form-control" asp-for="BranchName"/>
    </div>

    <div class="mt-3">
        <label class="form-lable">Street</label>
        <input type="text" class="form-control" asp-for="Street"/>
    </div>

    <div class="mt-3">
        <label class="form-lable">State</label>
        <input type="text" class="form-control" asp-for="State"/>
    </div>

    <div class="mt-3">
        <label class="form-lable">Postcode</label>
        <input type="text" class="form-control" asp-for="Postcode"/>
    </div>

    <div class="mt-3">
        <label class="form-lable">Telephone</label>
        <input type="text" class="form-control" asp-for="Telephone"/>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>