@model LibraryManagement.Models.Book

<h2>Edit Book</h2>

<form method="post">
    <div class="mt-3">
        <label class="form-lable">BookId</label>
        <input type="text" class="form-control" asp-for="BookId" readonly/>
    </div>

    <div class="mt-3">
        <label class="form-lable">Title</label>
        <input type="text" class="form-control" asp-for="Title"/>
    </div>

    <div class="mt-3">
        <label class="form-lable">Author</label>
        <input type="text" class="form-control" asp-for="Author"/>
    </div>

    <div class="mt-3">
        <label class="form-lable">Branch</label>
        <input type="text" class="form-control" asp-for="Branch"/>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button> |
        <button type="submit" class="btn btn-secondary">Cancel</button>
    </div>
</form>