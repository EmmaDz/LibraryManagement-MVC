@model LibraryManagement.Models.Author

<h2>Edit Author</h2>

<form method="post">
    <div class="mt-3">
        <label class="form-lable">AuthorId</label>
        <input type="text" class="form-control" asp-for="AuthorId" readonly/>
    </div>

    <div class="mt-3">
        <label class="form-lable">AuthorName</label>
        <input type="text" class="form-control" asp-for="AuthorName"/>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button> |
        <button type="submit" class="btn btn-secondary">Cancel</button>
    </div>
</form>