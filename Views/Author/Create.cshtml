@model LibraryManagement.ViewModels.AuthorViewModel

<h2>Create Author</h2>

<form asp-action="Create" asp-controller="Author" method="post">
    <div class="mt-3">
        <label class="form-lable">AuthorId</label>
        <input type="number" class="form-control" asp-for="AuthorId"/>
        <span asp-validation-for="AuthorId" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-lable">AuthorName</label>
        <input type="text" class="form-control" asp-for="AuthorName"/>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>