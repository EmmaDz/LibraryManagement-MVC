@model LibraryManagement.Models.Customer

<h2>Edit Customer</h2>

<form method="Post">
    <div class="mt-3">
        <label class="form-lable">CustomerId</label>
        <input type="text" class="form-control" asp-for="CustomerId" readonly/>
    </div>

    <div class="mt-3">
        <label class="form-lable">FullName</label>
        <input type="text" class="form-control" asp-for="FullName"/>
    </div>

    <div class="mt-3">
        <label class="form-lable">Email</label>
        <input type="email" class="form-control" asp-for="Email"/>
    </div>

    <div class="mt-3">
        <label class="form-lable">Address</label>
        <input type="text" class="form-control" asp-for="Address"/>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button> |
        <button type="submit" class="btn btn-secondary">Cancel</button>
    </div>
</form>