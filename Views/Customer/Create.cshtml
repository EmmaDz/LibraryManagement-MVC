@model LibraryManagement.ViewModels.CustomerViewModel

<h2>Create Customer</h2>

<form asp-action="Create" asp-controller="Customer" method="post">
    <div class="mt-3">
        <label class="form-lable">CustomerId</label>
        <input type="number" class="form-control" asp-for="CustomerId"/>
        <span asp-validation-for="CustomerId" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <label class="form-lable">FullName</label>
        <input type="text" class="form-control" asp-for="FullName"/>
    </div>

    <div class="mt-3">
        <label class="form-lable">Email</label>
        <input type="email" class="form-control" asp-for="Email"/>
    </div>

    <div class="mt-3">
        <label class="form-lable">Address</label>
        <input type="text" class="form-control" asp-for="Address"/>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>