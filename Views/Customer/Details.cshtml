@model LibraryManagement.Models.Customer

<h2>Details</h2>

<div>
    <h4>Customer</h4>
    <dl class="dl-horizontal">
        <dt>Full Name</dt>
        <dd>@Model.FullName</dd>
        <dt>Email</dt>
        <dd>@Model.Email</dd>
        <dt>Address</dt>
        <dd>@Model.Address</dd>
    </dl>
    <a asp-action="Edit" asp-route-id="@Model.CustomerId" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>